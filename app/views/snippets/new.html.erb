<h1 class = "text-lg-center title">Add a Code Snippet</h1>
<% if @snippet.errors.any? %>
<div class="row">
  <div class="col-md-6 col-md-offset-3 alert alert-danger">
  <ul>
    <% @snippet.errors.full_messages.each do |error_msg| %>
      <li><%= error_msg %></li>
    <% end %>
  </ul>
  <% end %>
  </div>
</div>

<div class="row">
  <div class="form-group-lg col-md-6 col-md-offset-3">
    <%= form_for @snippet do |f| %>
    <div class = "form-group">
    <%= f.label :kind %>
    <%= f.select :kind, [
             ["#{Snippet::KIND_RUBY}","#{Snippet::KIND_RUBY}"],
             ["#{Snippet::KIND_HTML}","#{Snippet::KIND_HTML}"],
             ["#{Snippet::KIND_CSS}","#{Snippet::KIND_CSS}"],
             ["#{Snippet::KIND_JAVASCRIPT}","#{Snippet::KIND_JAVASCRIPT}"]
           ], {}, {class: "form-control"} %>
    </div>
    <div class = "form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class = "form-group create-code">
    <%= f.label :code %>
    <%= f.text_area :code, class: "form-control", style: "height: 250px; font-family: monospace;font-size:13px "%>
    </div>
    <div class="form-group">
      <%= f.label :private do %>
      <%= f.check_box :private, class: "checkbox-inline" %>
      <span>Secret Snippet?</span>
      <% end %>
    </div>
    <div class = "form-group">
    <%= f.submit "Post the Snippet", class: "btn btn-success-outline btn-block" %>
    </div>
    <% end %>
  </div>
</div>
